@{
    @model Web.Models.SigninInput

    <div class="row">
        <div class="col-md-4 offset-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Üye Giriş</h5>

                    <div class="text-danger"  asp-validation-summary="ModelOnly"></div>

                    <form asp-controller="Auth" asp-action="SignIn" method="post">
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email address</label>
                            <input asp-for="Email" value="fuatcetinkaya@msn.com" type="email" class="form-control" id="email" aria-describedby="emailHelp">
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" value="Password12*" type="password" class="form-control" id="password">
                            <span class="text-danger" asp-validation-for="Email"></span>
                        </div>
                        <div class="mb-3 form-check">
                            <input asp-for="IsRemember" type="checkbox" class="form-check-input" id="exampleCheck1">
                            <label asp-for="IsRemember" class="form-check-label" for="exampleCheck1"></label>
                        </div>
                        <button type="submit" class="btn btn-primary">Giriş Yap</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}
